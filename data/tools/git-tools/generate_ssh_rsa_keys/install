#!/usr/bin/env bash

BIN_FOLDER=$1
TOOL_NAME=${PWD##*/}

sudo curl -o ${BIN_FOLDER}/${TOOL_NAME} -O https://gist.githubusercontent.com/yugoslavskiy/538a473222923a4b9ec1/raw/118548434d55f701742c600a822735f934b3ed9a/generate_ssh_rsa_keys && {
    sudo chmod +x ${BIN_FOLDER}/${TOOL_NAME}
    echo "${BIN_FOLDER}" > current_installation
    exit 0
}

exit 104
